<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="500.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.NewOrderController">
   <children>
      <ComboBox fx:id="cbItems" layoutX="89.0" layoutY="104.0" prefHeight="27.0" prefWidth="152.0" promptText="Item" />
      <TextField fx:id="txtQuantity" layoutX="257.0" layoutY="104.0" prefHeight="27.0" prefWidth="81.0" promptText="Quantity" />
      <Button fx:id="btnAdd" layoutX="349.0" layoutY="104.0" mnemonicParsing="false" onAction="#addItem" text="add">
         <font>
            <Font name="Inconsolata" size="13.0" />
         </font></Button>
      <Button fx:id="btnOrder" disable="true" layoutX="89.0" layoutY="415.0" mnemonicParsing="false" onAction="#makeOrder" prefHeight="27.0" prefWidth="91.0" text="order">
         <font>
            <Font name="Inconsolata" size="13.0" />
         </font>
      </Button>
      <Text layoutX="89.0" layoutY="84.0" strokeType="OUTSIDE" strokeWidth="0.0" text="New Order">
         <font>
            <Font name="Inconsolata" size="36.0" />
         </font>
      </Text>
      <ComboBox fx:id="cbTables" disable="true" layoutX="89.0" layoutY="138.0" onAction="#changeCombo" prefHeight="27.0" prefWidth="152.0" promptText="Table" />
      <Button fx:id="btnHome" layoutX="189.0" layoutY="416.0" mnemonicParsing="false" onAction="#Home" text="home">
         <font>
            <Font name="Inconsolata" size="14.0" />
         </font>
      </Button>
      <TableView fx:id="orderTable" layoutX="539.0" layoutY="54.0" prefHeight="339.0" prefWidth="307.0">
        <columns>
          <TableColumn fx:id="itemColumn" prefWidth="179.0" text="Item" />
          <TableColumn fx:id="quantityColumn" prefWidth="64.0" text="Quantity" />
            <TableColumn fx:id="priceColumn" prefWidth="54.0" text="Price" />
        </columns>
      </TableView>
      <Text layoutX="698.0" layoutY="436.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Total: ">
         <font>
            <Font name="Inconsolata" size="24.0" />
         </font>
      </Text>
      <Label fx:id="total" layoutX="778.0" layoutY="416.0" text="0.00">
         <font>
            <Font name="Inconsolata" size="24.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
